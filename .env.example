# API Configuration
# API Mode (set one to true)
# - Use mock API for local development
# - Use CloudBase for production deployment
# - Use real API backend for connecting to Java Spring Boot
VITE_USE_MOCK_API=false
VITE_USE_CLOUDBASE=false

# CloudBase Configuration (required when VITE_USE_CLOUDBASE=true)
# 请从 CloudBase 控制台获取环境 ID
VITE_CLOUDBASE_ENV_ID=

# Backend API Base URL (fallback when VITE_USE_MOCK_API=false and VITE_USE_CLOUDBASE=false)
# 示例: http://localhost:8080 或 https://api.example.com
VITE_API_BASE_URL=

# D-ID API Configuration (for virtual character streaming)
# 请从 D-ID 官网获取 API Key: https://studio.d-id.com/
VITE_DID_API_KEY=
VITE_DID_API_URL=https://api.d-id.com

# Feature Flags
VITE_ENABLE_VOICE_FEATURES=true
VITE_ENABLE_IMAGE_FEATURES=true
VITE_ENABLE_VIDEO_FEATURES=false
